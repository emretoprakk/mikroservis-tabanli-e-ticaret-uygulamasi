<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group mb-3">
            <input type="text" name="code" value="@ViewBag.Code" class="form-control border-0 p-4" placeholder="Kupon Kodu">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.CouponMessage as string))
        {
            <p class="mt-3 @ViewBag.MessageClass">@ViewBag.CouponMessage</p>
        }
    </form>

    <h5 class="section-title position-relative text-uppercase mb-3">
        <span class="bg-secondary pr-3">Sipariş Özeti</span>
    </h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Ürün Fiyatı</h6>
                <h6 class="subtotal">@ViewBag.Total ₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6>KDV (%10)</h6>
                <h6 class="tax">@ViewBag.Tax ₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6>Uygulanan İndirim</h6>
                <h6 class="discount-rate">@(ViewBag.DiscountRate > 0 ? $"% {ViewBag.DiscountRate}" : "---")</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6>Sepet Fiyatı</h6>
                <h6 class="total-with-discount">@ViewBag.TotalPriceWithTax ₺</h6>
            </div>
        </div>
        <!-- Uygulanan Kupon -->
        <p class="text-success applied-coupon-code mt-2">@(!string.IsNullOrEmpty(ViewBag.Code) ? $"Uygulanan Kupon: {ViewBag.Code}" : "")</p>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Genel Toplam</h5>
                <h5 class="total">@ViewBag.TotalNewPriceWithDiscount ₺</h5>
            </div>
            <form asp-controller="ShoppingCart" asp-action="ProceedToOrder" method="post">
                <button type="submit" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
            </form>
        </div>
    </div>
</div>