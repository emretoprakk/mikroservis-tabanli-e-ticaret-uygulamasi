@model List<BasketItemDto>
<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Ürünler</h6>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="d-flex justify-content-between">
                    <p>
                        @item.ProductName
                        <small class="text-muted">(@item.Quantity adet x @item.Price.ToString("N2") ₺)</small>
                    </p>
                    <p>@((item.Price * item.Quantity).ToString("N2")) ₺</p>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Sepetinizde ürün bulunmamaktadır.</p>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Ürünler Toplamı</h6>
            <h6>@(ViewBag.SubTotal?.ToString("N2") ?? "0.00") ₺</h6>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <h6>KDV (%10)</h6>
            <h6>@(ViewBag.Tax?.ToString("N2") ?? "0.00") ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">@(ViewBag.ShippingCost?.ToString("N2") ?? "0.00") ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Ödenecek Tutar</h5>
            <h5>@(ViewBag.Total?.ToString("N2") ?? "0.00") ₺</h5>
        </div>
        <div class="d-flex justify-content-between">
            <small class="text-muted">(KDV ve Kargo Dahil)</small>
            <small class="text-muted"></small>  
        </div>
    </div>
</div>
