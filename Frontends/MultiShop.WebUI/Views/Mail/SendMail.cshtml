@model MailRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }

        .form-input:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        }

        .form-container {
            animation: formFadeIn 0.5s ease-out;
        }

        @@keyframes formFadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="form-container max-w-2xl mx-auto bg-white rounded-lg shadow-xl overflow-hidden">
        <div class="bg-indigo-600 px-6 py-4">
            <h1 class="text-2xl font-bold text-white">Yeni Mail Oluştur</h1>
        </div>

        <form method="post" class="p-6 space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Alıcı Mail Adresi
                </label>
                <input type="email"
                       asp-for="ReceiverMail"
                       class="form-input block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none"
                       placeholder="ornek@mail.com"
                       required>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Mail Konusu
                </label>
                <input type="text"
                       asp-for="Subject"
                       class="form-input block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none"
                       placeholder="Konu başlığını giriniz"
                       required>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Mail İçeriği
                </label>
                <textarea asp-for="MessageContent"
                          rows="6"
                          class="form-input block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none resize-none"
                          placeholder="Mesajınızı buraya yazın..."
                          required></textarea>
            </div>

            <div class="flex items-center justify-between pt-4">
                <button type="button"
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                    Taslak Olarak Kaydet
                </button>

                <button type="submit"
                        class="px-6 py-3 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                    Gönder
                </button>
            </div>
        </form>
    </div>
</body>
</html>