@model CreateOrderAddressDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">

        <form method="post" class="row">

            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Fatura Adresi</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Ad</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Adınız">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyad</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="Yılmaz">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-posta</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="ornek@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Numarası</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="+90 555 123 4567">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Satırı 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="123 Cadde">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Satırı 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="123 Cadde">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="İstanbul">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="Kadıköy">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="12345">
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>

                @await Component.InvokeAsync("_OrderSummaryComponentPartial")
                @await Component.InvokeAsync("_PaymentMethodComponentPartial")

            </div>
        </form>
    </div>
</div>