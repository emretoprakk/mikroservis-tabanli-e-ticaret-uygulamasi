@model UpdateCommentDto

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="UserCommentId" />
                        <input type="text" asp-for="ProductId" />
                        <br />
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" class="form-control" asp-for="FullName" />
                        <br />
                        <label>Kullanıcı Görseli</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Email Adresi</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <label>Kullanıcı Puanı</label>
                        <input type="text" class="form-control" asp-for="Rating" />
                        <br />
                        <label>Yorum Tarihi</label>
                        <input type="text" class="form-control" asp-for="CreatedDate" />
                        <br />
                        <label>Yorum</label>
                        <textarea rows="3" class="form-control" asp-for="CommentDetail"></textarea>

                        <button class="btn btn-primary">Yorumu Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>



