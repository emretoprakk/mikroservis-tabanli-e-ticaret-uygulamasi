@model List<ResultOrderingByUserIdDto>

@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center" style="font-size: 1.3rem; font-weight: bold;">Sipariş Geçmişim</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="font-weight: bold;">#</th>
                                        <th style="font-weight: bold;">Toplam Fiyat</th>
                                        <th style="font-weight: bold;">Sipariş Tarihi</th>
                                        <th style="font-weight: bold;">Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr class="@(count % 3 == 0 ? "table-danger" : (count % 2 == 0 ? "table-success" : "table-primary"))">
                                            <th style="font-family: 'Arial', sans-serif; font-size: 0.9rem; color: #333;">@count</th>
                                            <td style="font-family: 'Arial', sans-serif; font-size: 0.9rem; color: #333;">@item.TotalPrice</td>
                                            <td style="font-family: 'Arial', sans-serif; font-size: 0.9rem; color: #333;">@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>
                                            <td><a href="#" class="btn btn-md btn-primary">Sipariş Detayları</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>